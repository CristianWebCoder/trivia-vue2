@import url('https://fonts.googleapis.com/css2?family=Montserrat&family=Nunito:wght@400;500;600;700;800;900&family=Roboto:wght@400;500;700&display=swap');

*,
*::before,
*::after
    margin 0
    padding 0
    box-sizing border-box

body
    font-family 'Roboto', sans-serif
    min-height 40rem

input
select
button
    font-family 'Roboto', sans-serif
    font-size 16px
    border none
    &:focus
        border none
        outline none
#app
    height 100%
    .game
        height 100%
.fade-enter-active
.fade-leave-active
  transition opacity 0.5s
.fade-enter
.fade-leave-to
  opacity 0
.game
    display flex
    flex-direction column
    align-items center
    justify-content center
    max-width 1200px
    margin 0 auto
    padding 100px 20px 10px
    .score
        position absolute
        top 20px
        right 5%
        span
            font-weight 700
            color #797979
    .first_view
        display flex
        flex-direction column
        h1
            font-size 40px
            text-align center
            margin-bottom 40px
        .custom_select
            select
                width 100%
                height 50px
                border 1px solid #a1a1a1
                border-radius 8px
            &:not(:last-child)
                margin-bottom 20px
        .custom_submit
            button
                margin 0 auto
                height 50px
                text-align center
                display flex
                align-items center
                justify-content center
                padding 5px 40px
                background #000
                border-radius 8px
                cursor pointer
                color white
                &:hover
                    background #383838
    .second_view
        .content
            display flex
            flex-direction column
            .number_and_progress
                display flex
                align-items center
                justify-content center
                margin 0 auto 28px
                gap 20px
                width 100%
                .bar_progress
                    background rgb(204, 204, 204)
                    height 8px
                    width 100%
                    max-width 400px
                    border-radius 10px
                    overflow hidden
                    .progress
                        background #000
                        width 30%
                        height 100%
                        transition all 0.3s ease
            .category
                text-align center
                font-weight 500
                color #646464
                margin-bottom 10px
            .question
                text-align center
                font-size 40px
                margin-bottom 30px
            .options
                display flex
                flex-wrap wrap
                justify-content center
                gap 15px
                max-width 800px
                margin 0 auto
                button
                    border-radius 50px
                    padding 5px 20px
                    min-height 30px
                    display flex
                    align-items center
                    justify-content center
                    color #000
                    border 1px solid #747474
                    cursor pointer
                    background white
                    transition all 0.2s ease
                    &:hover
                        background #000
                        color white
                        border 1px solid #000
    .third_view
        display flex
        flex-direction column
        align-items center
        img
            margin-bottom 20px
            max-width 100px
        h2
            font-size 40px
            margin-bottom 40px
            text-align center
        .button_game
            margin 0 auto 20px
            height 50px
            text-align center
            display flex
            align-items center
            justify-content center
            padding 5px 40px
            background #000
            border-radius 8px
            cursor pointer
            color white
            &:hover
                background #383838
        .button_view_questions
            margin 0 auto 20px
            height 50px
            text-align center
            display flex
            align-items center
            justify-content center
            padding 5px 40px
            background #eaeaea
            border-radius 8px
            cursor pointer
            color #000
            &:hover
                background #969696
        .questions_and_answers
            margin-top 20px
            border-collapse collapse
            thead
                tr
                    th
                        text-align left
            th
                background-color #f2f2f2
                padding 10px 15px
                border-bottom 2px solid #ddd
            td
                padding 10px 15px
                border-bottom 1px solid #ddd
            tr
                &:hover
                    background-color #f5f5f5
            .questions
            .answers
                width 48%
            .correct_answer
                display block
                padding 5px 0
                font-weight bold
            span
                margin-right 10px
@media screen and (max-width: 640px)
    .game
        .second_view
            .content
                .number_and_progress
                    .bar_progress
                        width 300px
                .question
                    font-size 26px
                .options
                    flex-direction column
                    button
                        min-height 40px
        .third_view
            h2
                font-size 30px